<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="@dimen/listitem_inside_margin"
    >

    <ImageView
        android:id="@+id/fullBookCover"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/listitem_inside_margin"
        android:contentDescription="@string/book_cover"
        android:src="@drawable/ic_launcher" />

    <TextView
        style="@style/list_item_title_theme"
        android:id="@+id/listBookTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toRightOf="@id/fullBookCover"
        android:gravity="center_vertical"
        android:ellipsize="end"
        android:layout_marginRight="@dimen/listitem_outside_margin"
        android:maxLines="1"
        tools:text="Title"
        />


    <TextView
        style="@style/list_item_subtitle_theme"
        android:id="@+id/listBookSubTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginTop="@dimen/listitem_inside_margin"
        android:layout_marginRight="@dimen/listitem_outside_margin"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/fullBookCover"
        android:layout_below="@+id/listBookTitle"
        tools:text="subtitle"
        />


</RelativeLayout>
